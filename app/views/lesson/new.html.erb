<%= form_with(model: @lesson, url: lesson_create_path) do |f| %>

  <label> Date du cours </label>
    <div class="field">
      <%= f.date_field :date %>
      <br><br>
    </div>

  <label> Début du cours </label>
    <div class="field">
      <%= f.time_field :start_lesson, :format=>"%H:%M" %>
      <br><br>
    </div>

  <label> Fin du cours </label>
    <div class="field">
      <%= f.time_field :end_lesson, :format=>"%H:%M" %>
      <br><br>
  </div>


  <%= f.label "évaluation/rémarque individuel" %>
    <div class="field">
      <%= f.text_field :remark1 %>
      <br><br>
    </div>

  <div class="form-group">
    <%= f.submit "Create", class: "btn btn-primary" %>
  </div>

<% end %>